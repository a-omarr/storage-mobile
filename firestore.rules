rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to check if the user exists in the admins collection
    function isAdmin() {
      return isAuthenticated() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Rules for the 'products' collection
    match /products/{productId} {
      // Any authenticated user can read products
      allow read: if isAuthenticated();
      // Only admins can create, update, or delete products
      allow write: if isAdmin();
    }

    // Rules for the 'admins' collection
    match /admins/{userId} {
      // Users can only read their own admin document
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Nobody can write to the admins collection from the client app
      // Admins should be added directly via the Firebase Console
      allow write: if false;
    }

    // Default rule: block everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
